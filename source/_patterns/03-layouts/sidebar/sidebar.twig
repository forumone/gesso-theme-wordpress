<div class="l-sidebar{{ has_multiple_sidebar ? ' l-sidebar--multi-2' }} {{ modifier_classes }}">

  {% if header_content %}
    <div class="l-sidebar__full">
      {{ header_content }}
    </div>
  {% endif %}

   {% if sidebar_first_content %}
    <aside class="l-sidebar__sidebar">
      {{ sidebar_first_content }}
    </aside>
  {% endif %}

  {% if main_content %}
    <div class="l-sidebar__main">
      {{ main_content }}
    </div>
  {% endif %}

  {% if sidebar_second_content %}
    <aside class="l-sidebar__sidebar">
      {{ sidebar_second_content }}
    </aside>
  {% endif %}
</div>
