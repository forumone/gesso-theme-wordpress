{% block content %}
    <!-- Provided by views/tease.twig -->
    <article class="tease tease--{{post.post_type}}" id="tease-{{post.ID}}">
        <div class="tease__title">
            <a href="{{post.link}}"><h2>{{post.title}}</h2></a>
        </div>
        <div class="tease__preview">{{post.get_preview}}</div>
        {% if post.get_thumbnail %}
            <div class="tease__image"><img src="{{post.thumbnail.src}}"/></div>
        {% endif %}
    </article>
{% endblock %}
