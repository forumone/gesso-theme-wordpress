{% extends "base.twig" %}

{% block content %}

    <!-- Provided by views/tag.twig -->
    <section class="section section--tag-archive">
        <div class="tag__title">
            <h2>{{ __('Tag Archive: ' , 'gesso') }}
                {{ wp_title }}</h2>
        </div>

        {% for post in posts %}
            <div class="tag__result">
                <a class="tag__link" href="{{post.link}}">{{post.title}}</a>
            </div>
        {% endfor %}
        {% include 'templates/pager.twig' %}
    </section>

{% endblock %}
