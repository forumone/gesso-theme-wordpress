{% extends "base.twig" %}

{% block content %}
    <!-- Provided by views/page.twig -->
    <section class="section section--page">
        <article class="article--page post-type-{{post.post_type}}" id="post-{{post.ID}}">
            <div class="page__title">
                <h2>{{post.title}}</h2>
            </div>
            <div class="page__author">
                <p>{{ __('Author - ', 'gesso')}}
                    <a href="{{user.link}}">{{user.name}}</a>
                </p>
            </div>
            <div class="page__body">
                {{post.content}}
            </div>
        </article>
    </section>

{% endblock %}
